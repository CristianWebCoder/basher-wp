.section_contact
    height calc(100vh - var(--nav-height))
    padding 4rem 0
    background-color $primary_color
    display flex
    justify-content center
    align-items center
    .container
        max-width 656px
        &.container_thank_you
            display none
            &.active
                display block
        &.container_form
            &.hide
                display none
        .line_subtitle
            margin-bottom 1.5rem
            overflow hidden
        .subtitle
            color $white
        form
            .contact_form
                display flex
                flex-wrap wrap
                gap 1rem
                .box_input
                    width 100%
                    &.box_input_50
                        width calc(50% - 8px)
                    p
                        span
                            input[type="text"]          
                            input[type="email"]          
                            input[type="number"]    
                                width 100%
                                height 44px
                                border-radius .625rem
                                font-size 1rem
                                background-color $white
                                outline none
                                padding .875rem 1.375rem
                                transition all 0.3s ease
                                color $black
                                font-family 'Gilroy Medium'
                                &:focus
                                    box-shadow 0px 0px 0px 2px $purple
                                &:placeholder
                                    color $gray_light
                            select
                                width 100%
                                height 44px
                                border-radius .625rem
                                outline none
                                padding .25rem 1.375rem
                                font-family 'Gilroy Medium'
                                font-size 1rem
                                display none
                    .custom-select-display
                        width 100%
                        height 44px
                        border-radius .625rem
                        outline none
                        padding .25rem 1.375rem
                        font-family 'Gilroy Medium'
                        font-size 1rem
                        background-color $white
                        display flex
                        align-items center
                        cursor pointer
                        &::before
                            content ''
                            position absolute
                            top 45%
                            right 20px
                            width 8px
                            height 8px
                            border-width 0 0 1px 1px
                            border-color #000
                            border-style solid
                            transform translateY(-50%) rotate(314deg)
                    .custom-options
                        width 100%
                        background-color $white
                        border-radius .625rem
                        position absolute
                        z-index 10
                        box-shadow 0px 14px 20px rgba(0,0,0,0.2)
                        overflow hidden
                    .custom-option
                        width 100%
                        height 44px
                        outline none
                        padding .25rem 1.375rem
                        font-family 'Gilroy Medium'
                        font-size 1rem
                        background-color $white
                        display flex
                        align-items center
                        cursor pointer
                        &:hover
                            background-color $terciary_color
                            color $white
                .box_textarea
                    p
                        textarea
                            width 100%
                            border-radius .625rem
                            height 100px
                            font-size 1rem
                            outline none
                            padding .875rem 1.375rem
                            transition all 0.3s ease
                            background-color $white
                            color $black
                            resize none
                            font-family 'Gilroy Medium'
                            &:focus
                                box-shadow 0px 0px 0px 2px $purple
                            &:placeholder
                                color $gray_light
                .btn_send
                    width auto
                    margin 0 auto
                    display flex
                    justify-content center
                    p
                        display flex
                        justify-content center
                    input[type="submit"]
                        border none
                        outline none
                        cursor pointer
                        padding-left 3.125rem
                        padding-right 3.125rem
                    .wpcf7-spinner
                        position absolute
                        top 50%
                        right 0
                        margin 0
                        margin-right 10px
                        transform translateY(-50%)
        .content
            .title_thanks 
                text-transform uppercase
                font-size clamp(2.5rem, 10vw, 3.75rem)
                -webkit-text-stroke 2px $white
                color $primary_color
            p
                color $white
                font-family 'Gilroy Bold'
                display flex
                flex-direction column
                line-height 1.1
                span
                    font-size clamp(2.5rem, 10vw, 3.125rem)
