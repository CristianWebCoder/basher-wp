.section_services
    position relative
    height calc(100vh - var(--nav-height))
    background-color $gray_superlight
    display flex
    flex-direction column
    padding 5.625rem 0
    .container
        display flex
        flex-direction column
        align-items center
        justify-content center
        .line_subtitle
            overflow hidden
            margin-bottom 3rem
        .subtitle
            color $primary_color
        .card_services
            display flex
            flex-wrap wrap
            justify-content center
            width 100%
            gap 1.5rem
            margin-bottom 3rem
            .line_card
                width 23%
                overflow hidden
            .card
                background-color $white
                border-radius 1.5rem 1.5rem 0 1.5rem
                padding 1.875rem 1.375rem
                display flex
                flex-direction column
                justify-content space-between
                height 100%
                .info
                    display flex
                    flex-direction column
                    justify-content space-between
                    margin-bottom 2.375rem
                    height 100%
                    .icon_and_text
                        img
                            width 48px
                            height 48px
                            object-fit contain
                            margin-bottom 8px
                        h3
                            font-size clamp(1.25rem, 6vw, 1.5rem)
                            color $gray
                            margin-bottom 1rem
                .terciary_button
                    align-self flex-start
    .service_before
        display none
        position sticky
        bottom 0
        margin-bottom -5.625rem
        width 100%
        height 160px
        background linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
