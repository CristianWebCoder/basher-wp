.modal-video
    position fixed
    border-radius 2.5rem
    width 100%
    max-width 740px
    aspect-ratio 16/9
    display flex
    flex-direction column
    top 50%
    left 50%
    transform translate(-50%, -50%)
    overflow hidden
    background-color $white
    scale 0
    visibility hidden
    opacity 0
    transition all 0.3s ease
    z-index 210
    &.show
        scale 1.0
        visibility visible
        opacity 1
    iframe
        width 100%
        height 100%
.modal-service
    position fixed
    border-radius 2.5rem
    width 100%
    max-width 740px
    display flex
    flex-direction column
    top 50%
    left 50%
    transform translate(-50%, -50%)
    overflow hidden
    background-color $white
    scale 0
    visibility hidden
    opacity 0
    transition all 0.3s ease
    z-index 200
    max-height 60vh
    overflow-y auto
    &::-webkit-scrollbar
        display none
    &.show
        scale 1.0
        visibility visible
        opacity 1
    .close_modal
        position absolute
        width 20px
        height 20px
        top 40px
        right 40px
        z-index 10
        cursor pointer
        &::before
            content ''
            position absolute
            width 40px
            height 40px
            border-radius 50px
            top 6px
            left 50%
            transform translate(-50%, -50%)
            transition all 0.3s ease
        &:hover
            &::before
                background-color rgba(255, 255, 255, 0.1)
        &:active
            &::before
                background-color rgba(255, 255, 255, 0.3)
        .line
            display block
            position relative
            background-color $white
            border-radius 5px
            height 3px
            width 100%
            &:nth-child(1)
                top 5px
                transform rotate(45deg)
            &:nth-child(2)
                top 2px
                transform rotate(-45deg)
    .row
        position relative
        width 100%
        .img_modal
            aspect-ratio 16/6
            position relative
            overflow hidden
            cursor pointer
            &:hover
