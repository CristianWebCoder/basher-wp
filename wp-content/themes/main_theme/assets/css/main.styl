.loader
    position fixed
    height 100vh
    width 100%
    z-index 10000
    display flex
    justify-content center
    align-items center
    overflow hidden
    opacity 1
    visibility visible
    background-color $white
    img
        max-width 120px
        height auto
        object-fit cover
        animation pulse 1.5s linear infinite
        z-index 1
@keyframes pulse
    0
        scale 1
    50%
        scale 1.1
    100%
        scale 1
.main_scrollsnap
    width 100%
    // height 100vh
    // scroll-snap-type y mandatory
    // overflow-y scroll
    overflow-x hidden
    scroll-behavior smooth
    scroll-padding-top 100px
    transition all 0.3s ease
    &::before
        content ''
        transition all 0.3s ease
    &::-webkit-scrollbar 
        width 10px
        border-radius 12px
    &::-webkit-scrollbar-thumb 
        background-color $primary_color
        border-radius 12px
        border 2px solid $white
    &::-moz-scrollbar
        width 10px
        border-radius 12px
    &::-moz-scrollbar-thumb 
        background-color $primary_color
        border-radius 12px
        border 2px solid $white
    header
    section
    footer
        scroll-snap-align start
        scroll-snap-stop always
    &.modal-active
        overflow hidden !important
        &::before
            position fixed
            content ''
            top 0
            left 0
            right 0
            bottom 0
            width 100%
            height 100%
            background-color rgba(0,0,0,0.7)
            z-index 100
